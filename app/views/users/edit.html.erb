<% @user.errors.full_messages.each do |message|  %>

  <p>
    <%= message %>
  </p>

<% end %>

<% if @current_user.firestation === false %>

<div class="petowner_signup">
  <h2>EDIT MY INFORMATION</h2>

  <%= form_for @user, url: user_path(@user) do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :password %>
    <%= f.text_field :password %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :address %>
    <%= f.text_field :address %>

    <%= f.label :unit_number %>
    <%= f.text_field :unit_number %>

  </br>

    <%= f.submit "SUBMIT" %>

  <% end %>

</div>

<% else %>

<div class="firestation_signup">

  <h2>UPDATE FIRESTATION INFORMATION</h2>

  <%= form_for @user, url: user_path(@user) do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :password %>
    <%= f.text_field :password %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.submit "SUBMIT" %>

  <% end %>

</div>

<% end %>

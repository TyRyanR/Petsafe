<h2>SIGN UP AS A PET OWNER</h2>

<%= form_for @user, url: users_path do |f| %>

  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :unit_number %>
  <%= f.text_field :unit_number %>

  <%= f.submit %>

<% end %>


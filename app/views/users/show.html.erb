<% if @current_user.firestation === false %>

    <% if @emergency %>
    <h1>CURRENT EMERGENCY AT MY BUILDING</h1>

      <div class="emergency">
        <h4>WHEN</h4>

        <p>
          <%= @emergency.created_at %>
        </p>

        <div class="firestation_status">

          <h4>FIRESTATION STATUS:</h4>
          <%= @emergency.firestation_status %>

        </div>


        <div class="user_status">

          <h4>MY STATUS:</h4>

          <%= form_for @emergency, url: emergency_path(@emergency.id) do |f| %>
            <%= f.button :submit, name: "user_status", value: "safe" %>
          <% end %>

          <%= form_for @emergency, url: emergency_path(@emergency.id) do |f| %>
            <%= f.button :submit, name: "user_status", value: "alert mode" %>
          <% end %>

        </div>

      </div>

    <% else %>

      <h1>THERE ARE NO CURRENT EMERGENCIES AT YOUR BUILDING</h1>

    <% end %>

<% end %>



<% if @current_user.firestation === true %>


    <div class="campaign">

      <% @current_user.emergencies.each do |emergency| %>
        <%= emergency.user.name %>
      <% end %>

    </div>

<% end %>
